<div class="row justify-content-center mt-3">
  <h1>MAKE YOUR OWN ITEM</h1>
</div>
<div class="col-12 col-md-10 align-self-center">
<%= simple_form_for @item, html: {class: 'flex-fill'} do |f| %>
  <%= f.input :name %>
  <div class="form-row">
  <div class="col-6">
  <%= f.input :volume, as: :float %>
  </div>
  <div class="col-6">
  <%= f.input :unit, collection: %w[gallons ounces litres millilitres], selected: 'gallons' %>
  </div>
  </div>
  <div class="col-6 offset-3">
  <%= f.button :submit, "MAKE YOUR ITEM", class: "btn new-button new-item btn-block" %>
  </div>
<% end %>
</div>