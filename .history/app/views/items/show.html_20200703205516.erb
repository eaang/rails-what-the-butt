<div id="show-container" class="card-container col-12 col-md-10 align-self-center">
  <div class="text-right align-self-center display-4">
    <%= emojify ":sparkles:" %>
  </div>
  <div id="choice-card" class="card-category color-<%= (1..8).to_a.sample %>">
    <div class="symbol align-self-center">
