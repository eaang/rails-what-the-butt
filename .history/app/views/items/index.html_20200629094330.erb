<div class="row col-12 justify-content-center">
  <h2>CHOOSE AN ITEM</h2>
</div>
<div class="row">
  <% @items.each do |item| %>
    <%= link_to item, class: 'text-decoration-none' do %>
      <div class="card">
        <div class="card-body">
          <div>
            <%= item.symbol %>
          </div>
          <div>
            <%= item.name.upcase %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= link_to new_item_path, class: 'text-decoration-none' do %>
    <div class="card">
      <div class="card-body">
        "YOUR OWN ITEM"
      </div>
    </div>
  <% end %>
</div>
